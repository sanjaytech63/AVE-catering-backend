{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": false,
    "noEmit": false,
    "transpileOnly": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "create-sample-orders.ts",
    "seed-sample-data.ts"
  ]
}

